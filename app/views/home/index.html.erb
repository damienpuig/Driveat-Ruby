<div id="hero">
	<div class="container">
		<br>
		<br>
		<div class="row">
			<div class="span12" >
				<div class="span5">
					<h1>Driveat</h1>
					<p class="lead" style="color:floralwhite;">
						Drive your own business with Driveat: A collaborative consumption software.
					</p>
				</div>

				<%= form_tag location_search_path, :method => :get, :class => "span4 pull-right form-search" do %>

				<h3 class="form-search-heading">Search for a place, any place</h3>
					<%= text_field_tag :search, nil, :class => "input-medium search-query", :placeholder => "Place where I live" %>
					<br />
					<select data-val="true"  id="distance" name="distance" class="valid span2 input-medium search-query">
						<option value="1">1 mile</option>
						<option value="5">5 miles</option>
						<option value="10">10 miles</option>
						<option value="50">50 miles</option>
					</select>
					<%= submit_tag "Search", :class => "btn", :name => nil %>
				<% end %>
				<div class="span8">
					&nbsp;
				</div>
			</div>
		</div>
	</div>
</div>

