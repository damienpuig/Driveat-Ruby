
<div class="span12">

<%= form_tag connect_path , :class => "form-signin"  do %>
   <h2 class="form-signin-heading">Log in.</h2>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag "Log in", :class => "btn btn-large btn-primary pull-right" %>
  <p class="text-warning">
            		<%= link_to 'Register', sign_up_path  %> if you don't have an account.
        </p>
<% end %>
</div>